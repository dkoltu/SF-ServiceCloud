<LiveChatSensitiveDataRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <actionType>Replace</actionType>
    <description>Visa Credit Card details masking</description>
    <enforceOn>7</enforceOn>
    <isEnabled>true</isEnabled>
    <pattern>^4((\d{3}[\s\-]*\d{3,4}[\s\-]*\d{3,4}[\s\-]*\d{4})|(d{3}[\s\-]*d{4}[\s\-]*\d{4}[\s\-]*\d{4}))$
\b4((\d{3}[\s\-]*\d{3,4}[\s\-]*\d{3,4}[\s\-]*\d{4})|(d{3}[\s\-]*d{4}[\s\-]*\d{4}[\s\-]*\d{4}))\b
^4(\d{12}|\d{15})$
\b4(\d{12}|\d{15})\b</pattern>
    <priority>2</priority>
    <replacement>***************</replacement>
</LiveChatSensitiveDataRule>
